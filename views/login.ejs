<%- include('partials/header') %>
<%- include('partials/nav-bar') %>

<div class="container-fluid mt-5">
  <span id="h1"><h1><em>Login</em></h1></span>

  <div class="row" id="login">
    <div class="col-12">
      <div class="card">
        <div class="card-body">

          <!-- Makes POST request to /login route -->
          <form action="/login" method="POST">
            <div class="form-group">
              <label for="email">Email</label>
              <input type="email" class="form-control" name="username" required="">
            </div>
            <div class="form-group">
              <label for="password">Password</label>
              <input type="password" class="form-control" name="password" required="">
            </div>
            <button id="log button" type="submit" class="btn btn-dark btn-block">Login</button>
            <a id="log" class="btn btn-light" href="forgot">Forgot Password</a>

            <div id="opt">
                <span>Or
                <br>
                 Sign In with Google</span>
            </div>

            <div id="google">
                <a class="btn" href="/auth/google" role="button">
                     <i class="fab fa-google"></i>
                </a>
            </div>
          </form>

        </div>
      </div>
    </div>


  </div>
</div>

<%- include('partials/footer') %>
