<%- include('partials/header') %>
<%- include('partials/nav-bar') %>

<section class="About" id="home">
  <div class="container-fluid">
    <h1 class="font-weight-bold">Let's Roll</h1>
  </div>
</section>

<section class="search-bar">
    <div class="container-fluid">
    <form action="/allfiles" method="GET" class="form-inline ">
      <div class="form-group search-bar-style ">
        <input type="text" class="input-search-bar-style" autocomplete="off" name="search" placeholder="Search Notes..." class="form-control">
        <input type="submit" value="Search" class="btn btn-dark">
      </div>
    </form>
  </div>
</section>

<hr>
  <div class="row container" style="margin:auto;margin-bottom:5px;">
    <% if(files){ %>
  <% files.forEach(function(file) { %>
    <div class="card card-body mb-3 col-lg-3 col-md-4 col-6" style="margin-right:5px;margin:auto;width:auto;background-color:#BBBBE0;border:2px solid grey;margin:3px;border-radius:3%;color:white;">
      <% if(file.isImage) { %>
        <img src="image/<%= file.filename %>" alt="">
        <% } else { %>
          <%= file.filename %>
            <% } %>
              <form method="POST" action="/download/<%= file.filename %>?_method=get">
                <button class="btn btn-info btn-block mt-4">Download</button>
              </form>

    </div>
    <% }) %>
      <% } else { %>
        <div style="margin: auto;"><p>No files to show</p></div>
        <% } %>
  </div>
