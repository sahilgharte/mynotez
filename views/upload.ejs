
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm"
    crossorigin="anonymous">
  <style>
    img {
      width: 100%;
    }
  </style>
  <title>SUP File Upload</title>
</head>
<body>
  <div class="container-fluid" style="width: 100%">
    <div class="row">
      <div class="col-md-6 col-sm-6 col-6" style="margin: auto;">
        <h1 class="text-center display-4 my-4">SUP File Uploader</h1>
        <form action="/upload" method="POST" enctype="multipart/form-data">
          <div class="custom-file mb-3">
            <input type="file" name="file" id="file" class="custom-file-input">
            <label for="file" class="custom-file-label">Choose File</label>
          </div>
          <input type="submit" value="Submit" class="btn btn-primary btn-block">
          <a class="btn btn-danger btn-block" href="/logout" role="button">Log Out</a>
        </form>
        <hr>
        <form action="/upload" method="GET" class="form-inline">
          <div class="form-group" style="margin: auto;">
            <input type="text" name="search" autocomplete="off" placeholder="Search Notes..." class="form-control">
            <input type="submit" value="Search"  class="btn btn-primary">
          </div>
        </form>
        <hr>
        <div class="row">
          <% if(files){ %>
  <% files.forEach(function(file) { %>
      <div class="card card-body mb-3 col-md-6 col-sm" style="margin: auto;width:auto;">
            <% if(file.isImage) { %>
              <img src="image/<%= file.filename %>" alt="">
              <% } else { %>
                <div style="text-align: center;"><%= file.filename %></div>
                  <% } %>
                    <form method="POST" action="/download/<%= file.filename %>?_method=get">
                      <button class="btn btn-info btn-block mt-4">Download</button>
                    </form>
                    <form method="POST" action="/upload/<%= file._id %>?_method=DELETE">
                    <button class="btn btn-info btn-block mt-4">Delete</button>
                    </form>
     </div>
    <% }) %>
      <% } else { %>
        <div style="margin: auto;"><p>No files to show</p></div>
        <% } %>
        </div>
      </div>
    </div>
  </div>

  <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
    crossorigin="anonymous"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
    crossorigin="anonymous"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
    crossorigin="anonymous"></script>
</body>

